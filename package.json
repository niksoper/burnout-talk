{
  "name": "liftoff-mobile",
  "version": "0.0.1",
  "description": "Liftoff Mobile Application",
  "main": "lib/bundle.js",
  "scripts": {
    "build-dev": "webpack --config config/webpack.config.js --progress",
    "build-prod": "yarn run build --env.production=true",
    "watch": "webpack --config config/webpack.config.js --progress --watch",
    "serve": "browser-sync start -s www -f www -c",
    "start": "npm-run-all --parallel watch serve",    
    "test": "jest"
  },
  "author": "Rocketmakers",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "armstrong-react": "^2.5.10",
    "axios": "^0.16.2",
    "classnames": "^2.2.5",
    "npm-run-all": "^4.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scroll": "^1.5.4"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.8",
    "@types/jest": "^21.1.0",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-test-renderer": "^16.0.0",
    "autoprefixer": "^7.1.5",
    "bluebird": "^3.5.1",
    "browser-sync": "^2.18.13",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.1.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.8",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "ts-jest": "^21.0.1",
    "ts-loader": "^2.3.7",
    "typescript": "~2.6.2",
    "webpack": "^3.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|ico|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
  }
}
